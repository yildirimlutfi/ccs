#define led_clock_pin IOID_24
#define led_data_pin  IOID_26
#define led_latch_pin IOID_25


PIN_Handle KumandaLedPinHandle;
PIN_State KumandaLedPinState;

PIN_Config KumandaLedPinTable[] =
{
    led_clock_pin | PIN_GPIO_OUTPUT_EN | PIN_GPIO_LOW | PIN_PUSHPULL | PIN_DRVSTR_MAX,
    led_data_pin  | PIN_GPIO_OUTPUT_EN | PIN_GPIO_LOW | PIN_PUSHPULL | PIN_DRVSTR_MAX,
    led_latch_pin | PIN_GPIO_OUTPUT_EN | PIN_GPIO_LOW | PIN_PUSHPULL | PIN_DRVSTR_MAX,

    PIN_TERMINATE
};

//bool role_ileri=0,role_geri=0,role_ig2=0,role_acil=1,role_fonk1_1=0,role_fonk1_2=0,role_fonk2_1=0,role_fonk2_2=0;
//bool role_kanca2=0,role_kanca1=0,role_ss2=0,role_sol=0,role_sag=0,role_ya2=0,role_asagi=0,role_yukari=0;
bool doRole595Hc[16];

void clockled(void)
{
     PIN_setOutputValue(KumandaLedPinHandle, led_clock_pin, 1);
     _delay_cycles (5);
     PIN_setOutputValue(KumandaLedPinHandle, led_clock_pin, 0);
}

void rolecikis(void)
{
     clockled(); clockled();
     PIN_setOutputValue(KumandaLedPinHandle, led_latch_pin, 0);

     PIN_setOutputValue(KumandaLedPinHandle, led_data_pin, doRole595Hc[0]); clockled();
     PIN_setOutputValue(KumandaLedPinHandle, led_data_pin, doRole595Hc[1]); clockled();
     PIN_setOutputValue(KumandaLedPinHandle, led_data_pin, doRole595Hc[2]); clockled();
     PIN_setOutputValue(KumandaLedPinHandle, led_data_pin, doRole595Hc[3]); clockled();
     PIN_setOutputValue(KumandaLedPinHandle, led_data_pin, doRole595Hc[4]); clockled();
     PIN_setOutputValue(KumandaLedPinHandle, led_data_pin, doRole595Hc[5]); clockled();
     PIN_setOutputValue(KumandaLedPinHandle, led_data_pin, doRole595Hc[6]); clockled();
     PIN_setOutputValue(KumandaLedPinHandle, led_data_pin, doRole595Hc[7]); clockled();


     PIN_setOutputValue(KumandaLedPinHandle, led_data_pin, doRole595Hc[8]); clockled();
     PIN_setOutputValue(KumandaLedPinHandle, led_data_pin, doRole595Hc[9]); clockled();
     PIN_setOutputValue(KumandaLedPinHandle, led_data_pin, doRole595Hc[10]); clockled();
     PIN_setOutputValue(KumandaLedPinHandle, led_data_pin, doRole595Hc[11]); clockled();
     PIN_setOutputValue(KumandaLedPinHandle, led_data_pin, doRole595Hc[12]); clockled();
     PIN_setOutputValue(KumandaLedPinHandle, led_data_pin, doRole595Hc[13]); clockled();
     PIN_setOutputValue(KumandaLedPinHandle, led_data_pin, doRole595Hc[14]); clockled();
     PIN_setOutputValue(KumandaLedPinHandle, led_data_pin, doRole595Hc[15]); clockled();

     _delay_cycles (5);
     PIN_setOutputValue(KumandaLedPinHandle, led_latch_pin, 1);
}
